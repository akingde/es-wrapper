<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Properties>
		<Property name="log.pattern">%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}%n%msg%n%n</Property>
		<Property name="file.all.filename">/var/tmp/all.log</Property>
		<Property name="file.all.pattern">/var/tmp/all.%i.log.gz</Property>
		<Property name="file.err.filename">/var/tmp/err.log</Property>
		<Property name="file.err.pattern">/var/tmp/err.%i.log.gz</Property>
	</Properties>
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="${log.pattern}" />
		</Console>
		<RollingFile name="all" bufferedIO="true" fileName="${file.all.filename}"
			filePattern="${file.all.pattern}">
			<PatternLayout pattern="${log.pattern}" />
			<Policies>
				<SizeBasedTriggeringPolicy size="50 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20" />
		</RollingFile>
		<RollingFile name="err" bufferedIO="true" fileName="${file.err.filename}"
			filePattern="${file.err.pattern}">
			<PatternLayout pattern="${log.pattern}" />
			<Policies>
				<SizeBasedTriggeringPolicy size="50 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20" />
		</RollingFile>
	</Appenders>
	<Loggers>
		<Logger name="com.itranswarp.search" level="info">
			<AppenderRef ref="all" />
		</Logger>
		<Root level="info">
			<AppenderRef ref="console" level="info" />
			<AppenderRef ref="all" level="info" />
			<AppenderRef ref="err" level="error" />
		</Root>
	</Loggers>
</Configuration>
